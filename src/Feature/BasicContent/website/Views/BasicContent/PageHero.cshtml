<div class="px-4 pt-5 my-5 text-center border-bottom">
    <h1 class="display-4 fw-bold text-body-emphasis"> @Html.Sitecore().Field("PageHeroTitle")</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4"> @Html.Sitecore().Field("PageHeroDescription")</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
            @Html.Sitecore().Field("PageHeroCTA")
        </div>
    </div>
    <div class="overflow-hidden" style="max-height: 30vh;">
        <div class="container px-5">
            @Html.Sitecore().Field("PageHeroImage")
        </div>
    </div>
</div>